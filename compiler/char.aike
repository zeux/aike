let int(x: char): int =
    llvm "zext i8 %x to i32"

let char(x: int): char =
    llvm "trunc i32 %x to i8"

let inrange(x, min, max) =
    int(x) >= int(min) and int(x) <= int(max)

let isdigit(ch) =
    inrange(ch, '0', '9')

let isalpha(ch) =
    inrange(ch, 'A', 'Z') or inrange(ch, 'a', 'z')

let isalnum(ch) =
    isalpha(ch) or isdigit(ch)

let isspace(ch) =
    ch == ' ' or ch == char(10)
