builtin fn newarr<T>(size: int): [T]
builtin fn sizeof<T>(): int

fn map<T, U>(a: [T], f: fn(T): U): [U]
    var b = newarr(#a)

    fn loop(a, b, f, i)
        if i < #a
            b[i] = f(a[i])
            loop(a, b, f, i + 1)

    loop(a, b, f, 0)
    b

fn concat<T>(a: [T], b: [T]): [T]
    var c = newarr(#a + #b)

    fn loop(ab, c, i, o)
        if i < #ab
            c[o] = ab[i]
            loop(ab, c, i + 1, o + 1)

    loop(a, c, 0, 0)
    loop(b, c, 0, #a)

    c

fn append<T>(a: [T], e: T): [T]
    concat(a, [e])

struct Pair<T, U>
