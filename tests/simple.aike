fn iter<T>(data: [T], f: fn(int, T))
    fn helper(data: _, f: _, offset: _)
        if offset < #data
            f(offset, data[offset])
            helper(data, f, offset + 1)

    helper(data, f, 0)

fn dump(data: [int])
    iter(data, fn (i,x) printfn("[%d]: %d", i, x))

fn first<T, U>(p: Pair.<T, U>): T
    p.first

