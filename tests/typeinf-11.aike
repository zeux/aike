type refcell<'T> = { contents: 'T }
type refpair<'T1, 'T2> = { first: refcell<'T1>; second: refcell<'T2> }

let car(x) =
    match x with refpair(first = x) -> x.contents

let cdr(x) =
    match x with refpair(second = x) -> x.contents

let y = refpair(refcell(1), refcell(true))

if cdr(y) then car(y) else 2

// OUTPUT:
// 1
